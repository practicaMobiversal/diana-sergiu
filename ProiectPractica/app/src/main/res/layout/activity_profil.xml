<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobiversal.practica.proiectpractica.ProfilActivity">

    <TextView
        android:id="@+id/profil_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume utilizator"
        android:layout_below="@+id/profil_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"/>

    <ImageView
        android:id="@+id/profil_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/profil_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profil_displayName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Status utilizator"/>

    <Button
        android:id="@+id/send_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profil_displayName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:text="Invita"/>
</RelativeLayout>
